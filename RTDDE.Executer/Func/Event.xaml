                    <TextBlock Name="EventInfo_post_type"></TextBlock>
                    <TextBlock Name="EventInfo_post_message_id"></TextBlock>
                    <TextBlock Name="EventInfo_post_param_01"></TextBlock>
                    <TextBlock Name="EventInfo_post_param_02"></TextBlock>
                </UniformGrid>

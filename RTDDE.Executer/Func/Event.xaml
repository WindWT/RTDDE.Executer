                            <ComboBox Grid.Row="0" Grid.Column="3" Name="EventSearch_attribute"></ComboBox>
                            <ComboBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Name="EventSearch_pattern"></ComboBox>
                            --><!--<ComboBox Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Name="EventSearch_pattern2"></ComboBox>--><!--
                            <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Name="EventSearchClear" Click="EventSearchClear_Click">Clear</Button>
                        </Grid>
                    </StackPanel>
                </Expander.Content>
            </Expander>-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Name="EventInfo_id"></TextBox>
                <TextBox Grid.Column="1" Name="EventInfo_chara_flag_no"></TextBox>
                <TextBox Grid.Column="2" Name="EventInfo_chara_symbol"></TextBox>
                <TextBox Grid.Column="3" Name="EventInfo_name"></TextBox>
                <TextBox Grid.Column="4" Name="EventInfo_attribute"></TextBox>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Name="EventInfo_type"></TextBox>
                <TextBox Grid.Column="1" Name="EventInfo_chara_kind"></TextBox>
            </Grid>
        </StackPanel>
        <ScrollViewer Grid.Column="1" Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="lv"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="EventInfo_lv" IsReadOnly="False" LostFocus="EventInfo_lv_LostFocus"></TextBox>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="soul"/>
                    <TextBox Grid.Row="0" Grid.Column="3" Name="EventInfo_soul_pt"></TextBox>
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="gold"/>
                    <TextBox Grid.Row="0" Grid.Column="5" Name="EventInfo_gold_pt"></TextBox>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="HP"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Name="EventInfo_HP" Width="250"></TextBox>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="ATK"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Name="EventInfo_ATK" Width="250"></TextBox>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="DEF"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Name="EventInfo_DEF" Width="250"></TextBox>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Dragon"/>
                    <TextBox Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" Name="EventInfo_flag"></TextBox>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Unit"/>
                    <TextBox Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="3" Name="EventInfo_isUnit"></TextBox>
                    
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="turn"/>
                    <TextBox Grid.Row="3" Grid.Column="3" Name="EventInfo_turn"></TextBox>
                    <TextBlock Grid.Row="3" Grid.Column="4" Text="ui"/>
                    <TextBox Grid.Row="3" Grid.Column="5" Name="EventInfo_ui"></TextBox>
                </Grid>
                <Expander BorderThickness="0" Name="EventAdvancedExpander" IsExpanded="False">
                    <Expander.Header>
                        <Label Content="Advanced"></Label>
                    </Expander.Header>
                    <Expander.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="50"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="model"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Name="EventInfo_model"></TextBox>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="texture"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Name="EventInfo_texture"></TextBox>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="icon"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Name="EventInfo_icon"></TextBox>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="shadow"/>
                            <TextBox Grid.Row="2" Grid.Column="3" Name="EventInfo_shadow"></TextBox>
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="up"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Name="EventInfo_up"></TextBox>
                            <TextBlock Grid.Row="3" Grid.Column="2" Text="atk_ef_id"/>
                            <TextBox Grid.Row="3" Grid.Column="3" Name="EventInfo_atk_ef_id"></TextBox>
                        </Grid>
                    </Expander.Content>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

<UserControl x:Class="RTDDE.Executer.Guide"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <Grid Name="GuideTab" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Initialized="GuideTab_Initialized">
        <DockPanel >
            <DataGrid Name="GuideDataGrid" AutoGenerateColumns="True" DockPanel.Dock="Left" Width="150" SelectionChanged="GuideDataGrid_SelectionChanged"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <WrapPanel Name="GuideTalk"></WrapPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>

                <TextBox Grid.Column="2" Name="UnitInfo_category"></TextBox>
                <TextBox Grid.Column="3" Name="UnitInfo_name"></TextBox>
                <TextBox Grid.Column="4" Name="UnitInfo_style"></TextBox>
            </Grid>

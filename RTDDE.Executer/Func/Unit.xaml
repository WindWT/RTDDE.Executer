                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Name="partySkill_num"></TextBox>
                                <TextBox Grid.Column="1" Name="partySkill_num_01"></TextBox>
